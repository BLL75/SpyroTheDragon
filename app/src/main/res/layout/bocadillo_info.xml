<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bocadillo_background_2"
    android:padding="16dp"
    android:elevation="8dp"
    android:layout_gravity="top|end"
    android:layout_marginTop="56dp"
    android:layout_marginEnd="16dp"
    android:visibility="gone">

    <!-- Flecha que apunta hacia el icono de información -->
    <ImageView
        android:id="@+id/flechaInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/flecha_invertida"
        android:layout_gravity="end"
        android:contentDescription="Flecha apuntando al icono de información" />

    <!-- Texto dentro del bocadillo -->
    <TextView
        android:id="@+id/textoBocadilloInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí puedes encontrar información sobre la aplicación."
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp"/>

    <!-- Contenedor para botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">

        <!-- Botón para retroceder -->
        <ImageButton
            android:id="@+id/btnAtrasBocadilloInfo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_flecha_izquierda"
            android:background="@null"
            android:contentDescription="Retroceder en la guía" />

        <!-- Espaciador -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <!-- Botón de cierre en el centro -->
        <ImageButton
            android:id="@+id/btnCerrarManual"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_closed"
            android:background="@null"
            android:contentDescription="Cerrar manual" />

        <!-- Espaciador -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <!-- Botón para avanzar -->
        <ImageButton
            android:id="@+id/btnAdelanteBocadilloInfo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_flecha_derecha"
            android:background="@null"
            android:contentDescription="Avanzar en la guía" />
    </LinearLayout>

</LinearLayout>
