<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bocadillo_background_2"
    android:padding="16dp"
    android:elevation="8dp"
    android:layout_gravity="center"
    android:visibility="gone">

    <!-- Título -->
    <TextView
        android:id="@+id/textoTituloResumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Has completado la guía!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingBottom="8dp"/>

    <!-- Resumen de los pasos completados -->
    <TextView
        android:id="@+id/textoResumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasos completados:\n✔ Personajes\n✔ Mundos\n✔ Coleccionables\n✔ Información"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Botón para finalizar la guía -->
    <Button
        android:id="@+id/btnFinalizarGuia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comenzar"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple"
        android:padding="8dp"/>
</LinearLayout>
